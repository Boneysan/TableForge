#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Exit on any error
set -e

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged for formatted files
echo "ğŸ“ Formatting and linting staged files..."
