{
  "name": "tableforge-performance-testing",
  "version": "1.0.0",
  "description": "Performance and load testing suite for TableForge",
  "main": "index.js",
  "scripts": {
    "test:load": "k6 run tests/performance/load/basic-load.js",
    "test:stress": "k6 run tests/performance/stress/stress-test.js",
    "test:websocket": "k6 run tests/performance/load/websocket-load.js",
    "test:api": "k6 run tests/performance/api/api-performance.js",
    "test:security": "npm run test:security:auth && npm run test:security:xss && npm run test:security:sql",
    "test:security:auth": "jest tests/security/auth-security.test.ts",
    "test:security:xss": "jest tests/security/xss-prevention.test.ts",
    "test:security:sql": "jest tests/security/sql-injection.test.ts",
    "benchmark:api": "autocannon -c 10 -d 30 -m POST -H 'Content-Type: application/json' -b '{\"name\":\"Benchmark Room\"}' http://localhost:5000/api/rooms",
    "report:generate": "node scripts/generate-performance-report.js",
    "report:security": "node scripts/generate-security-report.js"
  },
  "devDependencies": {
    "k6": "^0.47.0",
    "autocannon": "^7.12.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "supertest": "^6.3.3",
    "ws": "^8.14.2",
    "zap-nodejs-api": "^1.0.2",
    "eslint-plugin-security": "^1.7.1",
    "semgrep": "^1.45.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
