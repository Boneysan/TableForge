# Database Configuration
# PostgreSQL connection string for the application database
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/vorpal_board

# Firebase Configuration
# Firebase project ID for authentication
FIREBASE_PROJECT_ID=your-firebase-project-id

# Google Cloud Storage Configuration  
# Service account key JSON file path for Google Cloud Storage access
# This file should contain your service account credentials
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# OR use inline service account key (alternative to file path)
# GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Google Cloud Storage bucket name for storing game assets
GOOGLE_STORAGE_BUCKET=your-storage-bucket-name

# Server Configuration
# Port for the Express server (default: 5000)
PORT=5000

# Node environment (development, production, test)
NODE_ENV=development

# Session Configuration
# Secret key for session management (generate a secure random string)
SESSION_SECRET=your-super-secure-session-secret-key-min-32-chars

# CORS Configuration (optional)
# Allowed origins for CORS, comma-separated for multiple origins
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Replit Configuration (auto-populated in Replit environment)
# REPL_ID=auto-populated
# REPL_SLUG=auto-populated
# REPLIT_DB_URL=auto-populated

# Development Configuration
# Enable detailed logging in development
DEBUG=vorpal:*

# File Upload Configuration
# Maximum file size for uploads in bytes (default: 50MB)
MAX_FILE_SIZE=52428800

# Rate Limiting
# Requests per minute per IP (default: 100)
RATE_LIMIT_PER_MINUTE=100